generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  SUSPENDED
}

model UserProfile {
  id        String      @id @default(uuid())
  userId    String      @unique // Reference to Auth Service userId
  
  // Personal info
  firstName String?
  lastName  String?
  phone     String?     @unique
  avatar    String?
  dateOfBirth DateTime?
  
  // Address
  address   String?
  city      String?
  country   String?     @default("Vietnam")
  
  // Status
  status    UserStatus  @default(ACTIVE)
  
  // Metadata
  metadata  Json?       // Additional flexible data
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  @@index([userId])
  @@index([phone])
  @@index([status])
}
